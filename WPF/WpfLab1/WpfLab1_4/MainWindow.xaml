<Window x:Class="WpfLab1_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLab1_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>

        <Button x:Name="setName" Content="Set Name" HorizontalAlignment="Left" Height="39" Margin="31,84,0,0" VerticalAlignment="Top" Width="136" Click="Button_Click" Grid.ColumnSpan="4"/>
        <Button x:Name="retName" Content="Ret Name" HorizontalAlignment="Left" Height="38" Margin="31,179,0,0" VerticalAlignment="Top" Width="136" Click="Button_Click_1" Grid.ColumnSpan="4"/>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Height="38" Margin="177,179,0,0" VerticalAlignment="Top" Width="371" Grid.Column="3"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="39" Margin="177,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" Grid.Column="3" TextChanged="textBox_TextChanged"/>
        <Button Canvas.Left="10" Canvas.Top="10" Content="Click Me" Height="23" Name="button3" Width="75" Click="button3_Click" />
        <TextBox Width="170" Canvas.Left="90" Canvas.Top="12" Name="myTextBox" />
    </Canvas>
</Window>
